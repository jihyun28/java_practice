package noinheri;

public class MainClass2 {

	public static void main(String[] args) {
		// 전사 생성
		Warrior w1 = new Warrior("전사2");
		// 상태 조회
		w1.showStatus();
		// 쥐 생성
		Rat rat1 = new Rat();
		// 쥐와 교전 (3번)
		for(int i = 0; i < 3; i++) {
			w1.huntRat(rat1);
		}
		
		// 상태조회
		w1.showStatus();
	}

}
